<div class="container">
  <div class="row">
    <div class="col">
    </div>
    <div class="col-6">
      <h2 class="">Sign up</h2>
      <br />

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'email@email.com' %>
        </div>
      <br />
        <div class="field form-group">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: 'password' %>
        </div>
      <br />

        <div class="field form-group">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'password' %>
        </div>
      <br />

        <div class="actions">
          <%= f.submit "Sign up", data: {turbo: false} %>
        </div>
      <% end %>
      <br />

      <%= render "devise/shared/links" %>

    </div>
    <div class="col">
    </div>
  </div>
</div>
